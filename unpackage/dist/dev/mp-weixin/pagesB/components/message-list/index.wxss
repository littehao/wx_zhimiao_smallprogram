.message-list-container {
  height: 100%;
  width: 100%;
}
.message-list-container .t-message-item {
  padding: 16rpx 0;
}
.message-list-container .t-recieve-message {
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: flex-end;
  width: 100vw;
}
.message-list-container .t-message-avatar {
  margin-left: 20rpx;
  margin-right: 12rpx;
  width: 80rpx;
  height: 80rpx;
}
.message-list-container .t-self-message {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  width: 100vw;
}
.message-list-container .read-receipts {
  line-height: 42px;
